{
  # ========================================
  # ユーザー固有の設定（サンプル）
  # ========================================
  #
  # 【重要】このファイルはサンプルです！
  #
  # セットアップ手順:
  #
  # 1. 現在のユーザー名を確認:
  #    whoami
  #
  # 2. setup.sh を実行：
  #    ./setup.sh
  #
  # 【警告】
  # username を間違えると、システムの再起動やシャットダウンが
  # できなくなります。必ず現在ログインしているユーザー名と
  # 完全に一致させてください。
  #
  # ========================================

  # システムアーキテクチャ
  system = "x86_64-linux";

  # ユーザー名
  # 【必須】現在の `whoami` コマンドの出力と一致させること！
  # 例: "alice", "bob", "yourname"
  myName = "CHANGE_ME";  # ← ここを変更してください

  # ホスト名
  # 例: "nixos-laptop", "desktop-pc", "mycomputer"
  myHostname = "CHANGE_ME";  # ← ここを変更してください

  # ユーザー情報（Home Manager用）
  userFullName = "Your Name";

}
