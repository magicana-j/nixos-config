{
  # ========================================
  # ユーザー固有の設定（サンプル）
  # ========================================
  # 
  # 警告: このファイルはサンプルです！
  # 
  # 本番環境で使用する前に、以下の手順を実行してください：
  # 1. このファイルをコピー: cp user-config.nix.example user-config.nix
  # 2. user-config.nix を自分の環境に合わせて編集
  # 3. 設定を適用: sudo nixos-rebuild switch --flake .#$(hostname)
  # 
  # user-config.nix が存在しない場合、このサンプルファイルが
  # 自動的に読み込まれますが、デフォルト値のままです。
  # 
  # ========================================

  # システム設定
  system = "x86_64-linux";

  # ユーザー名（小文字の英数字とハイフン、アンダースコアのみ）
  myName = "myuser";

  # ホスト名（小文字の英数字とハイフン、アンダースコアのみ）
  myHostname = "mynixos";

  # GPU種類: "intel" または "amd"
  gpuType = "intel";

  # ユーザー情報（Home Manager用）
  userFullName = "Your Name";
  userEmail = "your.email@example.com";

  # タイムゾーン
  timeZone = "Asia/Tokyo";

  # ロケール
  locale = "ja_JP.UTF-8";
  extralocale = "ja_JP.UTF-8";
  xkblayout = "jp";
  keymap = "jp106";
  
}
